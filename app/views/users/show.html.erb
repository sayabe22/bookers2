<div class="container px-5 px-sm-0">
    <div class="row">
        <div class="col-md-3">
            <h2>User info</h2>
              <%= image_tag @user.get_profile_image(100,100) %>
            <table class="table">
                <tr>
                    <th>name</th>
                    <th><%= @user.name %></th>
                </tr>
                <tr>
                    <th>introduction</th>
                    <th><%= @user.introduction %></th>
                </tr>
                
            </table>
            <%= link_to edit_user_path(@user.id) do %>
                <i class="fa-solid fa-user-gear btn btn-outline-secondary btn-block"></i>
            <% end %>
            
            
            <h2 class="mt-3">New book</h2>
            <%= form_with model: Book.new do |f| %>
            
              <h4>Title</h4>
              <%= f.text_field :title %>
              <h4>Opinion</h4>
              <%= f.text_area :body %>
            <div class=btn btn-success">
              <%= f.submit 'Create Book' %>
            </div>
            <% end %>
        </div>
    </div>
</div>