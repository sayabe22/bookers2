<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
            <h1>Editing Book</h1>
            <%= form_with model: @book do |f| %>
                <label for="book_title">Title</label>
                <%= f.text_field :title, autofocus: true, id:"book_title", placeholder:"title"%>
                <label for="book_opinion">Opinion</label>
                <%= f.text_area :body, autofocus: true, id:"book_opinion", placeholder:"body"%> 
                <%= f.submit "Update Book", class:"btn btn-success" %>
            <% end %>
            <p><%= link_to "Show", book_path %>|<%= link_to "Back", books_path %></p>
        </div>
    </div>
</div>